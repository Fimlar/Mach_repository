<Window x:Class="RGBMixer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RGBMixer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!--Obdélník-->
        <Rectangle Grid.Column="0" Fill="{Binding Color}" Margin="20, 20, 20, 20"/>
        
        <!--Druhý grid-->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="RGB Mixer" FontSize="32"/>
            
            <!--Červená-->
            <WrapPanel Grid.Row="1" Orientation="Horizontal">
                <Label Content="Red" Background="Red" FontSize="26"
                       Padding="10" Width="100"/>
                <TextBox Margin="20, 0" Width="200" FontSize="26"
                         VerticalContentAlignment="Center" 
                         Text="{Binding R, Mode=TwoWay}"/>
            </WrapPanel>

            <Slider Grid.Row="2" Margin="10" Minimum="0" Maximum="255"
                    Value="{Binding R, Mode=TwoWay}" 
                    TickFrequency="1" 
                    IsSnapToTickEnabled="True"/>

            <!--Zelená-->
            <WrapPanel Grid.Row="3" Orientation="Horizontal">
                <Label Content="Green" Background="Green" FontSize="26"
                       Padding="10" Width="100"/>
                <TextBox Margin="20, 0" Width="200" FontSize="26"
                         VerticalContentAlignment="Center"
                         Text="{Binding G, Mode=TwoWay}"/>
            </WrapPanel>

            <Slider Grid.Row="4" Margin="10" Minimum="0" Maximum="255"
                    Value="{Binding G, Mode=TwoWay}" 
                    TickFrequency="1" 
                    IsSnapToTickEnabled="True"/>

            <!--Modrá-->
            <WrapPanel Grid.Row="5" Orientation="Horizontal">
                <Label Content="Blue" Background="Blue" FontSize="26"
                       Padding="10" Width="100"/>
                <TextBox Margin="20, 0" Width="200" FontSize="26"
                         VerticalContentAlignment="Center"
                         Text="{Binding B, Mode=TwoWay}"/>  
            </WrapPanel>

            <Slider Grid.Row="6" Margin="10" Minimum="0" Maximum="255"
                    Value="{Binding B, Mode=TwoWay}" 
                    TickFrequency="1" 
                    IsSnapToTickEnabled="True"/>
            
            <!--HEX kód-->
            <Label Grid.Row="7" Content="{Binding Hex}" FontSize="26"
                   FontWeight="Bold"/>
        </Grid>
    </Grid>
</Window>
